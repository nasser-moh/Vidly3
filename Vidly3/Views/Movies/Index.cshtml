@model List<Vidly3.Models.Movie>

    @{ViewBag.Title = "Index";
    }

    @if (!Model.Any())
    {
        <text>No Movies yet</text>

    }
    else {
    <h2>Movies</h2>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {

            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new {id=movie.Id}, null)</td>
            </tr>
            }
        </tbody>
    </table>
    }
